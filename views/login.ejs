<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Ticketac</title>
  </head>
  <body>


   <div class="container-fluid">
    <%- include('navbar') %>

    <div class="row">
    <div class="col 12">
      <div class="gradiant ">

        <div class="row">

         <!-- SIGN IN AREA -->
          <div class="col-12 col-sm-6 text-center">
            <form>
                <h4 class="titleForm" style="color: white;">Sign In</h4>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label"></label>
                  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label"></label>
                  <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                <a href="/sign-in"><button type="submit" class="btn btn-danger" style="color:white;">Confirm</button></a>
            </form>

            
        
          <!-- SIGN UP AREA -->
          <div class="col-12 col-sm-6 text-center">

            <form>
              <h4 class="titleForm" style="color: white;">Sign Up</h4>
              <div class="mb-3">
            
                  <label for="exampleInputUsername"></label>
                  <input name="usernameFromFront" type="text" class="form-control" placeholder="Name">
              </div>
                <div class="mb-3">
                    <label for="exampleInputUsername"></label>
                    <input name="usernameFromFront" type="text" class="form-control" placeholder="FirstName">
                  </div>
                <div class="mb3">
                  <label for="exampleInputEmail1"></label>
                  <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
                </div>
                <div class="mb3">
                  <label for="exampleInputPassword1"></label>
                  <input name="passwordFromFront" type="password" class="form-control"  placeholder="Password">
                </div>

                <a href="/sign-up"><button type="submit" class="btn btn-danger" style="color:white;">Confirm</button></a>
            </form>
            </div>

          </div>

        </div>
      </div>
    </div>
    </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
  </body>
</html>