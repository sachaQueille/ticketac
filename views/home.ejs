        <div class='container'>
            <div class='row'>
            <!--form-->
            <form action='/search' method='post'>
           
            <h3 class='text-white pt-5'>One-way Ticket :</h3>
            <div class="form d-lg-flex m-lg-2">
                <div class=" col-md-4 form-group m-2">
                    <input id="cityfrom" name="cityfrom" type="text" class="form-control"
                        placeholder="From: Paris, Marseille..." required>
                </div>
                <div class="col-md-4 form-group m-2">
                    <input id="cityto" name="cityto" type="text" class="form-control" placeholder="To: Lille, Nantes..."
                        required>
                </div>
                <div class='col-md-3 form-group m-2'>
                    <input id="date" name="date" type="date" class="form-control mb-2" required>
                </div>

                <a href="/home"><button type="submit" class="btn btn-danger m-2">Go
                </button></a>
            </form>
            </div>
        </form>
        <img class='landmark mx-auto' src='./images/landmark.png'></img>
        </div>

